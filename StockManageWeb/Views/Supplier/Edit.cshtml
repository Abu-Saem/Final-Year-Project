
@model StockManageWeb.Models.SupplierVM
@{
    /**/

    ViewBag.Title = "Edit";
}
@*<div class="alert alert-info">@ViewBag.message</div>
    <div class="row" style="margin-left:300px">*@
<div class="col-12">
    <div class="col-md-2"></div>
    <div class="col-md-8 ">
        <form method="post" enctype="multipart/form-data">
            <table>

                <tr>
                    <td>
                        <label class="control-label col-md-2" for="Data">Name</label>
                    </td>
                    <td>
                        @*<input type="text" name="Name" value="@Model.Name" />*@
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })

                    </td>

                </tr>

                <tr>
                    <td>
                        <label class="control-label col-md-2" for="Data">Code</label>
                    </td>
                    <td>

                        @Html.EditorFor(model => model.Code, new { htmlAttributes = new { @class = "form-control" } })
                    </td>

                </tr>


                <tr>
                    <td>
                        <label class="control-label col-md-2" for="Data">Address</label>
                    </td>
                    <td>
                        @*<input class="text-primary" type="text" name="ReorderLevel" value="@Model.ReorderLevel" />*@
                        @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })

                    </td>

                </tr>

                <tr>
                    <td>
                        <label class="control-label col-md-2" for="Data">Email</label>
                    </td>
                    <td>

                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                    </td>

                </tr>
                <tr>
                    <td>
                        <label class="control-label col-md-2" for="Data">Contact</label>
                    </td>
                    <td>

                        @Html.EditorFor(model => model.Contact, new { htmlAttributes = new { @class = "form-control" } })
                    </td>

                </tr>
                <tr>
                    <td>
                        <label class="control-label col-md-2" for="Data">C.Person</label>
                    </td>
                    <td>
                        @*<input class="text-primary" type="text" name="Discription" value="@Model.Discription" />*@
                        @Html.EditorFor(model => model.ContactPerson, new { htmlAttributes = new { @class = "form-control" } })

                    </td>

                </tr>

                <tr>
                    <td>
                        <label class="control-label col-md-2" for="Data">Image</label>
                    </td>


                    <td>
                        <input type="file" name="ImageData" onchange="fileCheck(this);" />

                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td><input class="btn btn-success" type="submit" value="Update" /></td>

                </tr>



            </table>

        </form>
    </div>
    <div class="col-md-2"></div>
</div>